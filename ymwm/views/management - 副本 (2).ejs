<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="../../favicon.ico">
    <title>后台管理首页</title>
    <link href="/bootstrap-3.3.5/css/bootstrap.min.css" rel="stylesheet">
    <link href="/bootstrap-3.3.5/css/dashboard.css" rel="stylesheet">
</head>
<body>
<%- include('cmnMngNav') %>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
            <section>
                <h2>用户</h2>
                <ul class="nav nav-sidebar">
                    <li class="active"><a href="/management">用户管理 <span class="sr-only">(current)</span></a></li>
                </ul>
            </section>
            <section>
            <h2>项目</h2>
                <ul class="nav nav-sidebar">
                    <li><a href="/projectManage">项目管理</a></li>
                    <li><a href="/projectAudit">项目审核</a></li>
                </ul>
            </section>
            <section>
                <h2>资金</h2>
                <ul class="nav nav-sidebar">
                    <li><a href="/moneyManage">已筹资金</a></li>
                </ul>
            </section>
        </div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
            <h1 class="page-header">审核</h1>
            <!--charts-->
            <div class="row placeholders">
                <div class="col-xs-12 col-sm-5 placeholder">
                    <h4>用户审核状态分布</h4>
                    <div id="user-check-data"></div>
                </div>
                <div class="col-xs-12 col-sm-5 placeholder">
                    <h4>用户注册数</h4>
                    <div id="user-regist-data"></div>
                </div>
            </div>
            <!--data-->
            <h2 class="sub-header">用户管理</h2>
            <div>
                <h3>搜索</h3>
                <label>状态</label>
                <select>
                    <option value="">--请选择--</option>
                    <option value="">已通过</option>
                    <option value="">未通过</option>
                    <option value="">未审核</option>
                </select>
                <input type="button" value="查询">
            </div>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>编号</th>
                        <th>用户名</th>
                        <th>手机号</th>
                        <th>邮箱</th>
                        <th>性别</th>
                        <th>身份证号</th>
                        <th>银行账号</th>
                        <th>银行名称</th>
                        <th>真实姓名</th>
                        <th>审核状态</th>
                        <th>操作</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>编号</td>
                        <td>用户名</td>
                        <td>手机号</td>
                        <td>邮箱</td>
                        <td>性别</td>
                        <td>身份证号</td>
                        <td>银行账号</td>
                        <td>银行名称</td>
                        <td>真实姓名</td>
                        <td><a class="btn btn-success btn-sm" href="#">已通过</a></td>
                        <td><a class="btn btn-link" href="">查看</a><a class="btn btn-link" href="">删除</a></td>
                    </tr>
                    <tr>
                        <td>编号</td>
                        <td>用户名</td>
                        <td>手机号</td>
                        <td>邮箱</td>
                        <td>性别</td>
                        <td>身份证号</td>
                        <td>银行账号</td>
                        <td>银行名称</td>
                        <td>真实姓名</td>
                        <td><a class="btn btn-danger btn-sm" href="#">未通过</a></td>
                        <td><a class="btn btn-link" href="">查看</a><a class="btn btn-link" href="">删除</a></td>
                    </tr>
                    <tr>
                        <td>编号</td>
                        <td>用户名</td>
                        <td>手机号</td>
                        <td>邮箱</td>
                        <td>性别</td>
                        <td>身份证号</td>
                        <td>银行账号</td>
                        <td>银行名称</td>
                        <td>真实姓名</td>
                        <td><a class="btn btn-warning btn-sm" href="#">待审核</a></td>
                        <td><a class="btn btn-link" href="">查看</a><a class="btn btn-link" href="">删除</a></td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div>
                <ul class="pagination">
                  <li><a href="#">&laquo;</a></li>
                  <li class="active"><a href="#">1</a></li>
                  <li class="disabled"><a href="#">2</a></li>
                  <li><a href="#">3</a></li>
                  <li><a href="#">4</a></li>
                  <li><a href="#">5</a></li>
                  <li><a href="#">&raquo;</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<script src="/javascripts/jquery-2.2.1.min.js"></script>
<script src="/javascripts/echarts.min.js"></script>
<script>
    //用户审核状态图标
    var userCheck = echarts.init(document.getElementById('user-check-data'));
    userCheck.setOption({
        series:[
            {
                name:'审核状态',
                type:'pie',
                radius:'55%',
                roseType:'angle',
                data:[
                    {value:100,name:'待审核'},
                    {value:30,name:'审核通过'},
                    {value:50,name:'未通过'}
                ]
            }
        ]
    });
    //用户注册数统计
    var userRegister = echarts.init(document.getElementById('user-regist-data'));
    userRegister.setOption({
        legend: {
            data:['用户注册数']
        },
        xAxis: {
            data: ["今天","昨天","前天","最近一周"]
        },
        yAxis: {},
        series: [{
            name: '销量',
            type: 'bar',
            data: [5, 4, 6, 18]
        }]
    });
</script>
</body>
</html>
